    function OnSuccess(data) {
        
        document.getElementById('ID').value = data.param1.ID;
        $("#ProductID").prop("selectedIndex", 0);
        var select = $("#CategoryID");
                    select.empty();
                    select.append($('<option/>', {
                    value: 0,
                    text: "Select Category"
                    }));
        $("#Length").val(null);
        $("#Width").val(null);
        $("#Detail").val(null);
        $("#ItemsCount").val(null);
        $("#SingleSizePrice").val(null);
        debugger;
        $("#person_message").html(data.param2);
        $("#person_aert").addClass("alert alert-success alert-dismissible");
        $("#person_aert").show();
         setTimeout(function () {
            $("#person_aert").hide('blind', {},300);
         }, 3000);
        debugger;
        //gridReLoad();

    }
    function OnFailure(response) {
        debugger;
        data = response.responseJSON;
        $("#person_message").html(data.param2);
        $("#person_aert").addClass("alert alert-danger alert-dismissible");
        $("#person_aert").show();
         setTimeout(function () {
            $("#person_aert").hide('blind', {},300);
        }, 3000);
    }

    $(function () {

        $("#DeliveryDate").datepicker({
            changeMonth: true,
            changeYear: true
        }
         );
        //Z_BaseClassJQGRID.bindGridTempate("OrderDetailViewGrid", Z_COMMON.URL.OrderDetail_Grid_View, 'Order Detail', OrderDetailViewGrid, "local");
    });
    function gridReLoad() {
        debugger;
        var orderID = parseInt(document.getElementById('ID').value);
        var tst = { orderID: orderID }
        Z_BaseClassJQGRID.loadGridWithGridID("OrderDetailViewGrid", tst);
    }
    $("#ProductID").change(function () {
        var pID = $('#ProductID option:selected').val();
        $.getJSON(Z_COMMON.URL.GET_Categories_BY_ProductID, { productID: pID},
            function (data) {
                    var select = $("#CategoryID");
                    select.empty();
                    select.append($('<option/>', {
                    value: 0,
                    text: "Select Category"
                    }));
                $.each(data.data, function (index, itemData) {
                        select.append($('<option/>', {
                        value: itemData.ID,
                        text: itemData.CategoryName
                        }));
                    });
                });
    });



</script>
