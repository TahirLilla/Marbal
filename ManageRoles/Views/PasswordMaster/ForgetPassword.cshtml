@model ManageRoles.ViewModels.UsermasterViewModel
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<script src="~/Scripts/gridScripts/common_script.js"></script>
<script src="~/Scripts/jquery-ui-1.9.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>




<div class="row">
    <div class="container text-center">
        <div class="gray-bg ptb-40">
            <h2 class="page-title">RealEstate</h2>
        </div>
    </div>

    <!-- register-area start -->
    <div class="register-area ptb-50">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 col-lg-4 col-lg-offset-4">
                    <div class="login">
                        <div class="login-form-container">
                            <div class="login-text">
                                <h2>Forget Password</h2>
                                <span>Please Enter your username and email id to reset you password.</span>
                            </div>
                            <div class="login-form">
                                @using (Html.BeginForm("VerifiyUser", "PasswordMaster"))
                                {
                                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                                    @Html.LabelFor(model => model.UserName)
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @maxlength = 20, @autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })


                                    @Html.LabelFor(model => model.EmailId)
                                    @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control", @maxlength = 30, @autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })
                                    <div class="button-box">
                                        <div class="login-toggle-btn">
                                            
                                            @if (ViewBag.errormessage != null)
                                            {
                                                <p class="alert alert-danger" id="successMessage">@ViewBag.errormessage</p>
                                            }
                                        </div>
                                        <input class="default-btn floatright" type="submit" value="Submit">
                                        
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>
    <!-- register-area end -->

</div>



