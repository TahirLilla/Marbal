@model ManageRoles.ViewModels.SupplierVM
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<script src="~/Scripts/inputmask/inputmask.min.js"></script>
<script src="~/Scripts/inputmask/bindings/inputmask.binding.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/GridTemplates/SupplierGridTem.js"></script>
<div class="panel panel-default">
    <div class="panel-heading">
        Add Category
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div class="panel-body">

        <div id="person_aert" class="alert" hidden="hidden" role="alert">
            <a href="#" class="close" onclick="hideaert()" aria-label="close">&times;</a>
            <strong>Message!</strong><div id="person_message"></div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @using (Ajax.BeginForm("Create", "Supplier", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess", OnFailure = "OnFailure" }))
        {
            @Html.AntiForgeryToken()
            <div class="row top-margin">
                <div class="col-lg-12">

                </div>
            </div>
            <div class="row top-margin">
                <div class="clearfix"></div>
                <div class="col-lg-4">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label " })
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @maxlength = 50 })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="col-lg-4">
                    @Html.LabelFor(model => model.Number, htmlAttributes: new { @class = "control-label " })
                    @Html.TextBoxFor(model => model.Number, new { @class = "form-control", @maxlength = 50 })
                    @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
                </div>
                <div class="col-lg-4">
                    @Html.LabelFor(model => model.AccountNumber, htmlAttributes: new { @class = "control-label " })
                    @Html.TextBoxFor(model => model.AccountNumber, new { @class = "form-control", @maxlength = 50 })
                    @Html.ValidationMessageFor(model => model.AccountNumber, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="row top-margin">
                <div class="clearfix"></div>
                <div class="col-lg-4">
                    @Html.LabelFor(model => model.BankName, htmlAttributes: new { @class = "control-label " })
                    @Html.TextBoxFor(model => model.BankName, new { @class = "form-control", @maxlength = 50 })
                    @Html.ValidationMessageFor(model => model.BankName, "", new { @class = "text-danger" })
                </div>
                <br />
            </div>
            <br />
            <div class="row">
                <div class="col-lg-4">
                    <input type="submit" value="Add Category" class="btn btn-success" id="BtnAddPlot" />
                </div>
            </div>

        }
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">Suppliers</div>
        <div class="panel-body">
            <table id="SupplierViewGrid"></table>
            <div id="pager_SupplierViewGrid"></div>
        </div>

    </div>
</div>





<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script type="text/javascript">
    function OnSuccess(data) {
        $("#person_message").html(data.param2);
        $("#person_aert").addClass("alert alert-success alert-dismissible");
        $("#person_aert").show();
        gridReLoad();
    }
    function OnFailure(response) {
        debugger;
        data = response.responseJSON;
        $("#person_message").html(data.param2);
        $("#person_aert").addClass("alert alert-danger alert-dismissible");
        $("#person_aert").show();
    }
    function hideaert() {
        $("#person_aert").hide();
    }
    $(function () {

        Z_BaseClassJQGRID.bindGridTempate("SupplierViewGrid", Z_COMMON.URL.Supplier_Grid_View, 'Supplier Search', SupplierGridTem, "local");
        gridReLoad();
    });
    function gridReLoad() {
        var tst = {}
        Z_BaseClassJQGRID.loadGridWithGridID("SupplierViewGrid", tst);

    }


</script>
<script src="~/Scripts/gridScripts/common_script.js"></script>
<script src="~/Scripts/gridScripts/Z_BaseClassJQGRID.js"></script>
